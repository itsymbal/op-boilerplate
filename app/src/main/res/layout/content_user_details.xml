<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.orangepenguin.boilerplate.mvp.userdetails.UserDetailsActivity"
    tools:showIn="@layout/activity_user_details">

    <EditText
        android:id="@+id/contents"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="User details go here for user"
        app:layout_constraintBottom_toBottomOf="@+id/content_user_details"
        app:layout_constraintLeft_toLeftOf="@+id/content_user_details"
        app:layout_constraintRight_toRightOf="@+id/content_user_details"
        app:layout_constraintTop_toTopOf="@+id/content_user_details"/>
</android.support.constraint.ConstraintLayout>
