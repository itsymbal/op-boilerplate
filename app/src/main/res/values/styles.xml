<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mediumBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">@color/mediumGreen</item>
        <item name="colorControlActivated">@color/mediumGreen</item>
        <item name="android:textColorPrimary">@color/mediumBlue</item>
        <item name="colorControlHighlight">@color/saladGreen</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!-- first define App's own text style, explicitly inheriting from system style-->
    <style name="TextAppearance.App" parent="@style/TextAppearance.AppCompat" />

    <!-- now inherit from App's style using dot notation. Only override elements that are not already in system style-->
    <style name="TextAppearance.App.Label">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.App.Label.Small">
        <item name="android:textSize">14sp</item>
    </style>


</resources>
